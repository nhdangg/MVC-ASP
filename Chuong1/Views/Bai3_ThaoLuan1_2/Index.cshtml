
@{
    ViewBag.Title = "Index";
}

<div class="container col-6 border p-4 rounded shadow">
    <form method="post" action="Index">
        <div class="row">
            <label class="p-0">Mã sản phẩm:</label>
            <input type="text" name="MaSP" class="form-control" required />

            <label class="mt-2 p-0">Tên sản phẩm:</label>
            <input type="text" name="TenSP" class="form-control" required />

            <label class="mt-2 p-0">Loại sản phẩm:</label>
            <input type="text" name="LoaiSP" class="form-control" required />

            <label class="mt-2 p-0">Đơn giá:</label>
            <input type="number" name="DonGia" class="form-control" required />

            <label class="mt-2 p-0">Số lượng:</label>
            <input type="number" name="SoLuong" class="form-control" required />

            <button class="btn btn-dark w-100 mt-3">Tính tiền</button>
        </div>
    </form>
</div>
@if (Model != null)
{
    <div class="container col-6 mt-4">
        <table class="table table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th>Mã SP</th>
                    <th>Tên SP</th>
                    <th>Loại</th>
                    <th>Đơn giá</th>
                    <th>Số lượng</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.MaSP</td>
                    <td>@Model.TenSP</td>
                    <td>@Model.LoaiSP</td>
                    <td>@Model.DonGia.ToString("#,0")</td>
                    <td>@Model.SoLuong</td>
                    <td>@Model.ThanhTien.ToString("#,0") VNĐ</td>
                </tr>
            </tbody>
        </table>
    </div>
}

