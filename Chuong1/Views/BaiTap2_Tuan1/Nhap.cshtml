
@{
    ViewBag.Title = "Nhap";
}

<div class="container shadow col-7">
    <form action="ThanhTien" method="post">
        <div class="row p-4">

            <div class="d-flex g-2">
                <label class="form-label col-3">Mã hàng:</label>
                <div class="row col-9">
                    <input type="text" class="form-control col-12" id="mah" name="mah" />
                </div>
            </div>
            <div class="d-flex g-2">
                <label class="form-label col-3">Tên hàng:</label>
                <div class="row col-9">
                    <input type="text" class="form-control col-9" id="ten" name="ten" />
                </div>
            </div>
            <div class="d-flex g-2">
                <label class="form-label col-3">Loại hàng:</label>
                <div class="row col-9">
                    <select name="loai" class="form-select col-12" id="loai">
                        <option value="Quần áo" @(ViewBag.LoaiHang == "Quần áo" ? "selected" : "")>Quần áo</option>
                        <option value="Giày dép" @(ViewBag.LoaiHang == "Giày dép" ? "selected" : "")>Giày dép</option>
                        <option value="Mỹ phẩm" @(ViewBag.LoaiHang == "Mỹ phẩm" ? "selected" : "")>Mỹ phẩm</option>
                    </select>
                </div>
            </div>
            <div class="d-flex g-2">
                <label class="form-label col-3">Đơn giá:</label>
                <div class="row col-9">
                    <input type="text" class="form-control col-9" id="gia" name="gia" />
                </div>
            </div>
            <div class="d-flex g-2">
                <label class="form-label col-3">Số lượng:</label>
                <div class="row col-9">
                    <input type="text" class="form-control col-9" id="soluong" name="soluong" />
                </div>
            </div>
            <div class="d-flex g-2">
                <label class="form-label col-3">Thành tiền:</label>
                <div class="row col-9">
                    <input type="text" id="thanhtien" class="form-control col-9" readonly />
                </div>
            </div>
            <div class="d-flex g-2">
                <label class="form-label col-3"></label>
                <input type="submit" name="name" value="Tính" class="bg-primary rounded-2 px-3" />
            </div>

            <script>
                window.onload = function () {
                    document.getElementById("mah").value = "@ViewBag.maHang";
                    document.getElementById("ten").value = "@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode(ViewBag.TenHang ?? ""))";
                    document.getElementById("gia").value = "@ViewBag.Gia";
                    document.getElementById("soluong").value = "@ViewBag.SoLuong";
                    document.getElementById("thanhtien").value = "@ViewBag.ThanhTien";
                };
            </script>

            <div class="table mt-5">
                <table class="table table-bordered">
                    <thead class="bg-black text-white">
                        <tr>
                            <th>Mã hàng</th>
                            <th>Tên hàng</th>
                            <th>Loại hàng</th>
                            <th>Đơn giá</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@ViewBag.maHang</td>
                            <td>@ViewBag.TenHang</td>
                            <td>@ViewBag.LoaiHang</td>
                            <td>@ViewBag.Gia</td>
                            <td>@ViewBag.SoLuong</td>
                            <td>@ViewBag.ThanhTien</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </form>

</div>

