
@{
    ViewBag.Title = "Index";
}

<div class="container col-md-6 col-12 border border-2 rounded-2 p-4">
    <h2 class="col-12 fw-bold text-center">Thực hiện chính</h2>
    <form action="Tinh" method="post">
        <div class="row">
            <label class="form-label col-12 p-0">Nhập a:</label>
            <input type="text" class="col-12 form-control" placeholder="Nhập số a" name="soA" />

            <label class="form-label col-12 mt-3 p-0">Nhập b:</label>
            <input type="text" class="col-12 form-control" placeholder="Nhập số b" name="soB" />

            <div class="row d-flex align-items-start mt-3 col-12">
                <label class="col-12 col-md-12 col-lg-4">Chọn phép tính:</label>
                <div class="col-12 col-md-12 col-lg-2 d-flex"><input type="radio" name="phepTinh" value="cong" checked class="form-check me-1" />Cộng</div>
                <div class="col-12 col-md-12 col-lg-2 d-flex"><input type="radio" name="phepTinh" value="tru" class="form-check me-1" />Trừ</div>
                <div class="col-12 col-md-12 col-lg-2 d-flex"><input type="radio" name="phepTinh" value="nhan" class="form-check me-1" />Nhân</div>
                <div class="col-12 col-md-12 col-lg-2 d-flex"><input type="radio" name="phepTinh" value="chia" class="form-check me-1" />Chia</div>
            </div>
            <div class="row mt-3">
                <input class="col-12 form-control bg-black text-white fw-bold" type="submit" value="Calculate" />
            </div>
        </div>
    </form>
</div>

