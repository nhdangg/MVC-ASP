
@{
    ViewBag.Title = "Index";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container col-12 col-md-10 col-lg-6 border border-2 rounded-2">

    <div class="row">
        <form class="p-0 m-0" action="PhuongTrinhBacHai" method="post">
            <h2 class="col-12 bg-black text-white rounded-top-2 text-center py-1">Giải phương trình bậc 2</h2>

            <div class="row px-5">
                <label class="form-label col-12 p-0">Hệ số a:</label>
                <input type="text" class="form-control col-12" name="soA" />

                <label class="form-label col-12 p-0">Hệ số b:</label>
                <input type="text" class="form-control col-12" name="soB" />

                <label class="form-label col-12 p-0">Hệ số c:</label>
                <input type="text" class="form-control col-12" name="soC" />

                <input type="submit" class="btn bg-black text-white col-12 my-3" value="Giải phương trình" />

                <div class="border border-2 rounded-2 mb-3 bg-light">
                    <p class="col-12">Kết quả:</p>
                    <p class="col-12 fw-bold">@ViewBag.KetQua</p>
                </div>
            </div>
        </form>
    </div>
</div>


