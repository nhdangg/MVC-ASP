
@{
    ViewBag.Title = "Index";
}


<div class="container col-lg-6 col-md-8 col-sm-10 mt-1">
    <div class="card shadow border-0 rounded-3">
        <div class="card-body">
            <form method="post" action="Index">
                <div class="mb-3">
                    <label class="form-label">Mã sinh viên:</label>
                    <input type="text" class="form-control" name="MaSV" required />
                </div>

                <div class="mb-2">
                    <label class="form-label">Họ và tên:</label>
                    <input type="text" class="form-control" name="HoTen" required />
                </div>

                <div class="mb-2">
                    <label class="form-label">Email:</label>
                    <input type="email" class="form-control" name="Email" required />
                </div>

                <div class="mb-2">
                    <label class="form-label">Số điện thoại:</label>
                    <input type="text" class="form-control" name="SoDT" required />
                </div>

                <div class="mb-2">
                    <label class="form-label">Điểm thi:</label>
                    <input type="number" class="form-control" name="DiemThi" step="0.1" required />
                </div>

                <div class="text-center">
                    <button class="btn btn-primary px-4" type="submit">
                        <i class="bi bi-save2"></i> Lưu thông tin
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@if (Model != null)
{
    <table class="table table-bordered text-center col-6 mt-2">
        <tr>
            <th>Mã sinh viên</th>
            <td>@Model.MaSV</td>
        </tr>
        <tr>
            <th>Họ và tên</th>
            <td>@Model.HoTen</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Số điện thoại</th>
            <td>@Model.SoDT</td>
        </tr>
        <tr>
            <th>Điểm thi</th>
            <td>@Model.DiemThi</td>
        </tr>
    </table>
}
