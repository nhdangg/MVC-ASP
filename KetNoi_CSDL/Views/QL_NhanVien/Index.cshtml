@model IEnumerable<KetNoi_CSDL.Models.NHANVIEN>

@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<h2>Thông tin Nhân Viên</h2>

<table class="table table-bordered">
    <tr>
        <th>
            @Html.Label("Mã nhân viên")
        </th>
        <th>
            @Html.Label("Họ tên")
        </th>
        <th>
            @Html.Label("Mã phòng")
        </th>
        <th>
            @Html.Label("Thông tin phòng")
        </th>
        <th>
            @Html.Label("Lương")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Manv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hoten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Maphong)
            </td>
            <td>
                @item.TenPhong
            </td>
            <td>
                @($"{item.Luong:#,0} VNĐ")
            </td>
            <td>
                @Html.ActionLink(" Thêm mới", "Create", new { id = item.Manv.Trim() }, new { @class = "bi bi-info-circle text-success me-2 text-decoration-none p-1 px-3 border rounded-2 fw-bold shadow", title = " Chi tiết" }) |
                @Html.ActionLink(" Sửa", "Edit", new { id = item.Manv.Trim() }, new { @class = "bi bi-pencil-square text-warning me-2 text-decoration-none p-1 px-3 border rounded-2 fw-bold shadow", title = " Sửa" }) |
                @Html.ActionLink(" Xóa", "Delete", new { id = item.Manv.Trim() }, new { @class = "bi bi-trash text-danger text-decoration-none p-1 px-3 border rounded-2 fw-bold shadow", title = " Xóa" })

            </td>
        </tr>
    }

</table>
