@model IEnumerable<Chuong_3.Models.SinhVien>

@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<h2>Thông tin toàn bộ Sinh Viên</h2>

<!-- PHẦN TÌM KIẾM -->
<div class="col-12">
    @using (Html.BeginForm("TimKiemSinhVien", "Sinh_Vien", FormMethod.Get))
    {
        <div class="input-group">
            <input type="text" name="hoTen" class="form-control" placeholder="Nhập thông tin tìm kiếm theo Tên" />
            <button class="btn btn-primary" type="submit">Tìm Kiếm</button>
        </div>
    }
</div>


<!-- LINK THEO THÔNG TIN SẮP XẾP, 3 GIÁ TRỊ CÓ TUỔI LỚN NHẤT, ...-->
<p class="mt-3">
    @Html.ActionLink("Thêm SV", "Create", null, new { @class = "text-decoration-none text-danger fw-bold" })
    @Html.ActionLink("All Sinh Viên", "Index", null, new { @class = "text-decoration-none ms-3" })
    @Html.ActionLink("Sắp xếp Tăng theo tuổi", "XapSepTang", null, new { @class = "text-decoration-none ms-3" })
    @Html.ActionLink("Sắp xếp Giảm theo tuổi", "XapSepGiam", null, new { @class = "text-decoration-none ms-3" })
    @Html.ActionLink("3 Sinh Viên có tuổi lớn nhất", "T3NguoiTuoiCaoNhat", null, new { @class = "text-decoration-none ms-3" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaSV)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoTen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tuoi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GioiTinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaLop)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaSV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tuoi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioiTinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaLop)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.MaSV })" class="text-decoration-none text-danger fw-bold">
                    <i class="bi bi-pencil-square"></i> Sửa
                </a> |
                <a href="@Url.Action("Details", new { id = item.MaSV })" class="text-decoration-none text-primary fw-bold">
                    <i class="bi bi-info-circle"></i> Chi tiết
                </a> |
                <a href="@Url.Action("Delete", new { id = item.MaSV })" class="text-decoration-none text-danger fw-bold">
                    <i class="bi bi-trash"></i> Xóa
                </a>

            </td>
        </tr>
    }

</table>
